@model Car
    <div class="col-sm-6 col-lg-6 col-md-6">
        <div class="thumbnail">
            <img src="@Model.ImageThumbnailUrl" alt="" class="img-responsive" style="height:250px;">
            <div class="caption">
                <h3>
                    <a asp-controller="Car"
                       asp-action="Details"
                       asp-route-id="@Model.CarId">@Model.Name</a>
                </h3>
                <p>@Model.ShortDescription</p>
            </div>
        </div>
    </div>